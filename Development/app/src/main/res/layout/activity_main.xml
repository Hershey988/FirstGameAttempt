<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.alex.development.Menu"
    android:background="@drawable/main_menu_background">


    <!--Get rid of width and height hardcode Values ASAP -->

    <!--Get rid of width and height hardcode Values ASAP -->

    <!--Get rid of width and height hardcode Values ASAP -->

    <Button
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:id="@+id/high_activity"
        android:onClick="scorePressed"
        android:padding="20dp"
        android:background="@drawable/highscores"
        android:layout_below="@+id/play_activity"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="                                                    " />

    <Button
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:id="@+id/setBtn"
        android:padding="20dp"
        android:background="@drawable/settings"
        android:onClick="settingsPressed"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/high_activity"
        android:layout_centerHorizontal="true"
        android:text="                                                    " />

    <Button
        android:id="@+id/play_activity"
        android:onClick="playPress"
        android:padding="20dp"
        android:background="@drawable/play"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:text="                                                    " />


</RelativeLayout>
